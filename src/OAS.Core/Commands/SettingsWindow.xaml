<Window x:Class="OpenAsphalte.Commands.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="420" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" SelectionChanged="OnTabSelectionChanged">
            <!-- Onglet General -->
            <TabItem x:Name="tabGeneral" Header="General">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Langue -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock x:Name="lblLanguage" Text="" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbLanguage" Width="200" HorizontalAlignment="Left">
                            <!-- Items crees dynamiquement dans le code-behind -->
                        </ComboBox>
                    </StackPanel>

                    <!-- Mode developpeur -->
                    <CheckBox x:Name="chkDevMode"
                              Grid.Row="1"
                              Content=""
                              Margin="0,0,0,10"/>

                    <!-- Mises a jour -->
                    <CheckBox x:Name="chkCheckUpdates"
                              Grid.Row="2"
                              Content=""
                              Margin="0,0,0,15"/>

                    <!-- Separateur -->
                    <Separator Grid.Row="3" Margin="0,5,0,10"/>

                    <!-- Informations -->
                    <TextBlock x:Name="txtInfo"
                               Grid.Row="4"
                               Foreground="Gray"
                               FontSize="11"
                               TextWrapping="Wrap"/>
                </Grid>
            </TabItem>

            <!-- Onglet Modules -->
            <TabItem x:Name="tabModules" Header="Modules">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <Button x:Name="btnCheckUpdates" Content="Check Updates" Padding="10,5" Click="OnCheckUpdatesClick"/>
                        <TextBlock x:Name="txtUpdateStatus" Text="" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>

                    <ListView x:Name="lstModules" Grid.Row="1" BorderThickness="1" BorderBrush="#CCC" SelectionMode="Multiple">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected}"
                                                      IsEnabled="{Binding CanUpdate}"
                                                      Checked="OnModuleSelectionChanged"
                                                      Unchecked="OnModuleSelectionChanged"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Status" Width="45">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                             <TextBlock Text="{Binding StatusIcon}" FontWeight="Bold" Foreground="{Binding StatusColor}" HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Name" Width="130" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Version" Width="90" DisplayMemberBinding="{Binding VersionDisplay}"/>
                                <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Action" Width="90">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding ActionText}"
                                                    IsEnabled="{Binding CanUpdate}"
                                                    CommandParameter="{Binding}"
                                                    Click="OnModuleActionClick"
                                                    Padding="5,2"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Barre d'installation multiple -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="btnInstallSelected"
                                Content="Installer la sÃ©lection"
                                Padding="10,5"
                                IsEnabled="False"
                                Click="OnInstallSelectedClick"/>
                        <TextBlock x:Name="txtSelectedCount"
                                   Text=""
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Foreground="Gray"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Boutons globaux -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="btnCancel"
                    Content=""
                    Width="80"
                    Margin="0,0,10,0"
                    Click="OnCancelClick"/>
            <Button x:Name="btnSave"
                    Content=""
                    Width="100"
                    IsDefault="True"
                    Click="OnSaveClick"/>
        </StackPanel>
    </Grid>
</Window>
