<Window x:Class="OpenAsphalte.Commands.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="450" Width="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Width="200" Height="105"
                    VerticalAlignment="Top"
                    Margin="0,0,15,0"
                    CornerRadius="8"
                    Background="White">
                <Image x:Name="imgLogo"
                       Stretch="Uniform"
                       Margin="5"/>
            </Border>

            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <TextBlock x:Name="txtAppName"
                           Text="Open Asphalte"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>

                <TextBlock x:Name="txtSubtitle"
                           Text=""
                           FontSize="13"
                           Foreground="#7F8C8D"
                           Margin="0,2,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="lblVersion"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Width="100"/>
                    <TextBlock x:Name="txtVersion"
                               Text=""
                               Foreground="#2C3E50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="lblBuildDate"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Width="100"/>
                    <TextBlock x:Name="txtBuildDate"
                               Text=""
                               Foreground="#2C3E50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="lblChannel"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Width="100"/>
                    <TextBlock x:Name="txtChannel"
                               Text=""
                               Foreground="#2C3E50"/>
                    <!-- Warning badge for pre-release versions -->
                    <Border x:Name="badgeWarning"
                            Background="#E74C3C"
                            CornerRadius="3"
                            Padding="6,2"
                            Margin="10,0,0,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="txtBadge"
                                   Text="? ALPHA"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="Bold"/>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock x:Name="lblFramework"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Width="100"/>
                    <TextBlock x:Name="txtFramework"
                               Text=""
                               Foreground="#2C3E50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock x:Name="lblModules"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Width="100"/>
                    <TextBlock x:Name="txtModules"
                               Text=""
                               Foreground="#2C3E50"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock x:Name="lblCommands"
                               Text=""
                               FontWeight="SemiBold"
                               Foreground="#34495E"
                               Width="100"/>
                    <TextBlock x:Name="txtCommands"
                               Text=""
                               Foreground="#2C3E50"/>
                </StackPanel>

                <TextBlock x:Name="txtLicense"
                           Text=""
                           FontSize="11"
                           Foreground="#95A5A6"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1"
                Background="#F8F9FA"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                     <Button x:Name="btnUpdate"
                            Content=""
                            Padding="15,8"
                            Margin="0,0,10,0"
                            Click="OnUpdateClick"/>

                     <Button x:Name="btnCredits"
                            Content="Credits"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            Click="OnCreditsClick"/>

                     <Button x:Name="btnReportBug"
                            Content=""
                            Padding="15,8"
                            Click="OnReportBugClick"/>
                </StackPanel>

                <Button x:Name="btnClose"
                        Grid.Column="1"
                        Content=""
                        Width="100"
                        IsDefault="True"
                        IsCancel="True"
                        Click="OnCloseClick"/>
            </Grid>
        </Border>
    </Grid>
</Window>
