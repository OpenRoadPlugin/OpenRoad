<Window x:Class="OpenRoad.Core.Commands.CreditsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenRoad.Core.Commands"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SubHeaderStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        
        <DataTemplate x:Key="ContributorTemplate">
            <Border Padding="5" Margin="2" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Role}" FontStyle="Italic" Foreground="Gray"/>
                    </StackPanel>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Visibility="{Binding HasUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                         <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="Hyperlink_RequestNavigate">
                             <TextBlock Text="Link"/>
                         </Hyperlink>
                    </TextBlock>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <TabControl>
            <!-- ONGLET CORE -->
            <TabItem Header="{Binding CoreTabTitle}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Open Road Core Team" Style="{StaticResource HeaderStyle}"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding CoreContributors}" 
                             ItemTemplate="{StaticResource ContributorTemplate}"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </Grid>
            </TabItem>

            <!-- ONGLET MODULES -->
            <TabItem Header="{Binding ModulesTabTitle}">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Liste gauche : Modules -->
                    <DockPanel Grid.Column="0" LastChildFill="True" Margin="0,0,10,0">
                        <TextBlock DockPanel.Dock="Top" Text="{Binding ModulesListTitle}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ListBox ItemsSource="{Binding Modules}" SelectedItem="{Binding SelectedModule, Mode=TwoWay}" DisplayMemberPath="Name"/>
                    </DockPanel>

                    <!-- Panneau droite : DÃ©tails -->
                    <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Visibility="{Binding HasSelectedModule, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="{Binding SelectedModule.Name}" Style="{StaticResource HeaderStyle}"/>
                                <TextBlock Text="{Binding SelectedModule.Description}" TextWrapping="Wrap" Margin="0,0,0,15"/>
                                
                                <TextBlock Text="Version" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedModule.Version}" Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding AuthorTitle}" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock Text="{Binding SelectedModule.Author}"/>

                                <TextBlock Text="{Binding ContributorsTitle}" Style="{StaticResource SubHeaderStyle}" Margin="0,15,0,5"/>
                                <ItemsControl ItemsSource="{Binding SelectedModule.Contributors}" ItemTemplate="{StaticResource ContributorTemplate}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <Button Content="{Binding CloseButtonText}" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="80" Height="25" Click="CloseButton_Click" Margin="0,0,10,5" Grid.ZIndex="100"/>
    </Grid>
</Window>
