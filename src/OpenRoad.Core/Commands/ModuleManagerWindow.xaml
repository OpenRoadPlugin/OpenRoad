<Window x:Class="OpenRoad.Commands.ModuleManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionnaire de Modules" 
        Height="550" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="400"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- Style pour les boutons d'action -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="MinWidth" Value="90"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <!-- Template pour les items de module -->
        <DataTemplate x:Key="ModuleItemTemplate">
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Margin="0,4" Padding="12" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- IcÃ´ne statut -->
                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" 
                            Background="{Binding StatusBackground}" Margin="0,0,12,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding StatusIcon}" FontSize="18" FontWeight="Bold"
                                   Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Infos module -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                            <TextBlock Text="{Binding VersionDisplay}" Foreground="Gray" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Description}" Foreground="#666" TextWrapping="Wrap" 
                                   Margin="0,4,0,0" MaxWidth="400"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <TextBlock Text="{Binding Author}" Foreground="#999" FontSize="11"/>
                            <TextBlock Text=" â€¢ " Foreground="#999" FontSize="11"/>
                            <TextBlock Text="{Binding Category}" Foreground="#999" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Bouton action -->
                    <Button Grid.Column="2" Content="{Binding ActionText}" 
                            Style="{StaticResource ActionButtonStyle}"
                            IsEnabled="{Binding CanPerformAction}"
                            Background="{Binding ActionBackground}"
                            Foreground="{Binding ActionForeground}"
                            Click="OnModuleActionClick"
                            Tag="{Binding}"
                            VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tÃªte -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="txtTitle" Text="Gestionnaire de Modules" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="txtSubtitle" Text="Installez et gÃ©rez les modules Open Road depuis le catalogue officiel." 
                       Foreground="Gray" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Barre d'actions -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button x:Name="btnRefresh" Content="ðŸ”„ Actualiser" Padding="12,8" Click="OnRefreshClick"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0">
                <TextBlock x:Name="txtStatus" Text="" VerticalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBlock x:Name="txtFilter" Text="Filtrer:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="cmbFilter" Width="150" SelectionChanged="OnFilterChanged">
                    <ComboBoxItem Content="Tous" Tag="all" IsSelected="True"/>
                    <ComboBoxItem Content="InstallÃ©s" Tag="installed"/>
                    <ComboBoxItem Content="Disponibles" Tag="available"/>
                    <ComboBoxItem Content="Mises Ã  jour" Tag="updates"/>
                </ComboBox>
            </StackPanel>
        </Grid>
        
        <!-- Liste des modules -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="lstModules" ItemTemplate="{StaticResource ModuleItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Message vide -->
        <Border x:Name="pnlEmpty" Grid.Row="2" Visibility="Collapsed" Background="#F5F5F5" CornerRadius="8">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“¦" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtEmptyMessage" Text="Cliquez sur Actualiser pour charger le catalogue" 
                           FontSize="14" Foreground="Gray" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Barre de progression -->
        <StackPanel x:Name="pnlProgress" Grid.Row="3" Visibility="Collapsed" Margin="0,10,0,0">
            <ProgressBar x:Name="progressBar" Height="4" IsIndeterminate="True"/>
            <TextBlock x:Name="txtProgress" Text="Chargement..." Foreground="Gray" FontSize="11" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Pied de page -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="txtFooter" Grid.Column="0" VerticalAlignment="Center" Foreground="Gray" FontSize="11">
                <Run x:Name="txtModulesPath" Text="Dossier modules: "/>
                <Hyperlink x:Name="lnkOpenFolder" Click="OnOpenFolderClick">Ouvrir</Hyperlink>
            </TextBlock>
            
            <Button x:Name="btnClose" Grid.Column="1" Content="Fermer" Padding="20,8" Click="OnCloseClick"/>
        </Grid>
    </Grid>
</Window>
