{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:release",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "-c",
                "Release",
                "${workspaceFolder}/src/OAS.sln"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build:installer",
            "command": "& 'C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe' '${workspaceFolder}\\installer\\OAS.iss'",
            "type": "shell",
            "args": [],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "dependsOn": ["build:release"]
        },
        {
            "label": "build:release+installer",
            "command": "${workspaceFolder}\\scripts\\build-install.bat",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
            "label": "build:modules",
            "type": "shell",
            "command": "Get-ChildItem -Path '${workspaceFolder}/modules' -Filter *.csproj -Recurse | ForEach-Object { & dotnet build -c Release \"$($_.FullName)\" }",
            "group": "build",
            "problemMatcher": "$msCompile",
            "detail": "Compile tous les modules un par un"
        },
        {
            "label": "build:all",
            "type": "shell",
            "command": "& 'C:\\Program Files (x86)\\Inno Setup 6\\ISCC.exe' '${workspaceFolder}\\installer\\OAS.iss'",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": [],
            "dependsOn": ["build:release", "build:modules"],
            "dependsOrder": "sequence",
            "detail": "Compile Core + Modules puis cr√©e l'installer"
        }
    ]
}
