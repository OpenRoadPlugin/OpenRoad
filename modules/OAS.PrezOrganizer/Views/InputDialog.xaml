<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OpenAsphalte.Modules.PrezOrganizer.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Saisie"
        Height="180" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OAS.Core;component/Resources/OasStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Label -->
        <TextBlock Grid.Row="0"
                   x:Name="PromptLabel"
                   Text="Nouveau nom :"
                   Style="{StaticResource OasFieldLabel}"
                   Margin="0,0,0,8"/>

        <!-- Champ de saisie -->
        <TextBox Grid.Row="1"
                 x:Name="InputTextBox"
                 Style="{StaticResource OasFieldTextBox}"
                 FontSize="14"
                 KeyDown="InputTextBox_KeyDown"/>

        <!-- Message d'erreur -->
        <TextBlock Grid.Row="2"
                   x:Name="ErrorText"
                   Foreground="#F44336"
                   FontSize="11"
                   Margin="0,4,0,0"
                   Visibility="Collapsed"
                   TextWrapping="Wrap"/>

        <!-- Boutons -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    x:Name="CancelButton"
                    Content="Annuler"
                    Style="{StaticResource OasSecondaryButton}"
                    Padding="16,8"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2"
                    x:Name="OkButton"
                    Content="OK"
                    Style="{StaticResource OasPrimaryButton}"
                    Padding="16,8"
                    Click="OkButton_Click"/>
        </Grid>
    </Grid>
</Window>
