<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OpenAsphalte.Modules.PrezOrganizer.Views.FindReplaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chercher et Remplacer"
        Height="480" Width="520"
        MinHeight="400" MinWidth="420"
        WindowStartupLocation="CenterOwner"
        Background="#F0F0F0"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OAS.Core;component/Resources/OasStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Champs de saisie -->
            <RowDefinition Height="Auto"/>   <!-- Options -->
            <RowDefinition Height="Auto"/>   <!-- Header prévisualisation -->
            <RowDefinition Height="*"/>      <!-- Liste de prévisualisation -->
            <RowDefinition Height="Auto"/>   <!-- Compteur -->
            <RowDefinition Height="Auto"/>   <!-- Boutons -->
        </Grid.RowDefinitions>

        <!-- Champs Rechercher / Remplacer -->
        <StackPanel Grid.Row="0">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="SearchLabel" Text="Rechercher :"
                           Style="{StaticResource OasFieldLabel}"/>
                <TextBox Grid.Column="1" x:Name="SearchTextBox"
                         Style="{StaticResource OasFieldTextBox}"
                         FontSize="13"
                         TextChanged="OnFieldChanged"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="ReplaceLabel" Text="Remplacer par :"
                           Style="{StaticResource OasFieldLabel}"/>
                <TextBox Grid.Column="1" x:Name="ReplaceTextBox"
                         Style="{StaticResource OasFieldTextBox}"
                         FontSize="13"
                         TextChanged="OnFieldChanged"/>
            </Grid>
        </StackPanel>

        <!-- Options -->
        <CheckBox Grid.Row="1" x:Name="CaseSensitiveCheckBox"
                  Content="Respecter la casse"
                  Margin="0,0,0,12"
                  Checked="OnFieldChanged" Unchecked="OnFieldChanged"/>

        <!-- Header prévisualisation -->
        <TextBlock Grid.Row="2" x:Name="PreviewHeader" Text="Prévisualisation"
                   Style="{StaticResource OasGroupHeader}" Margin="0,0,0,6"/>

        <!-- Liste de prévisualisation -->
        <Border Grid.Row="3" Background="White" CornerRadius="4" Margin="0,0,0,8">
            <ListView x:Name="PreviewListView" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="ColBefore" Header="Avant" Width="200"
                                        DisplayMemberBinding="{Binding Before}"/>
                        <GridViewColumn x:Name="ColAfter" Header="Après" Width="200"
                                        DisplayMemberBinding="{Binding After}"/>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Border>

        <!-- Compteur de correspondances -->
        <TextBlock Grid.Row="4" x:Name="MatchCountText" Text=""
                   Foreground="#666" FontSize="12" Margin="0,0,0,8"/>

        <!-- Boutons -->
        <Grid Grid.Row="5" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" x:Name="CancelButton"
                    Content="Annuler"
                    Style="{StaticResource OasSecondaryButton}"
                    Padding="16,8" Margin="0,0,8,0"
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2" x:Name="ReplaceAllButton"
                    Content="Remplacer tout"
                    Style="{StaticResource OasPrimaryButton}"
                    Padding="16,8"
                    IsEnabled="False"
                    Click="ReplaceAllButton_Click"/>
        </Grid>
    </Grid>
</Window>
