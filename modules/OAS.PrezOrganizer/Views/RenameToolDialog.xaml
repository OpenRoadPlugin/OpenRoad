<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OpenAsphalte.Modules.PrezOrganizer.Views.RenameToolDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Outil de renommage"
        MinHeight="500" MinWidth="520"
        Background="#F0F0F0"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OAS.Core;component/Resources/OasStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Mode selection -->
            <RowDefinition Height="Auto"/>   <!-- Prefix/Suffix fields -->
            <RowDefinition Height="Auto"/>   <!-- Pattern fields -->
            <RowDefinition Height="Auto"/>   <!-- Scope -->
            <RowDefinition Height="Auto"/>   <!-- Header prévisualisation -->
            <RowDefinition Height="*"/>      <!-- Liste -->
            <RowDefinition Height="Auto"/>   <!-- Boutons -->
        </Grid.RowDefinitions>

        <!-- Mode Selection -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock x:Name="ModeLabel" Text="Mode de renommage :"
                       Style="{StaticResource OasFieldLabel}" Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="ModePrefixSuffix" Content="Préfixe / Suffixe"
                             IsChecked="True" Margin="0,0,20,0"
                             Checked="OnModeChanged"/>
                <RadioButton x:Name="ModePattern" Content="Pattern avec variables"
                             Checked="OnModeChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Prefix/Suffix Fields (visible when ModePrefixSuffix is selected) -->
        <StackPanel x:Name="PrefixSuffixPanel" Grid.Row="1" Margin="0,0,0,12">
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="PrefixLabel" Text="Préfixe :"
                           Style="{StaticResource OasFieldLabel}"/>
                <TextBox Grid.Column="1" x:Name="PrefixTextBox"
                         Style="{StaticResource OasFieldTextBox}"
                         FontSize="13"
                         TextChanged="OnFieldChanged"/>
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="SuffixLabel" Text="Suffixe :"
                           Style="{StaticResource OasFieldLabel}"/>
                <TextBox Grid.Column="1" x:Name="SuffixTextBox"
                         Style="{StaticResource OasFieldTextBox}"
                         FontSize="13"
                         TextChanged="OnFieldChanged"/>
            </Grid>
        </StackPanel>

        <!-- Pattern Fields (visible when ModePattern is selected) -->
        <StackPanel x:Name="PatternPanel" Grid.Row="2" Margin="0,0,0,12" Visibility="Collapsed">
            <Grid Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="PatternLabel" Text="Pattern :"
                           Style="{StaticResource OasFieldLabel}"/>
                <TextBox Grid.Column="1" x:Name="PatternTextBox"
                         Style="{StaticResource OasFieldTextBox}"
                         FontSize="13"
                         Text="{}{N:00}-{ORIG}"
                         TextChanged="OnFieldChanged"/>
            </Grid>
            <TextBlock x:Name="PatternHelp"
                       Text="Variables : {N} numéro, {N:00} formaté, {ORIG} nom actuel, {DATE} date"
                       Foreground="#999" FontSize="11" Margin="130,0,0,10" TextWrapping="Wrap"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="StartNumLabel" Text="Numéro de départ :"
                               Style="{StaticResource OasFieldLabel}"/>
                    <TextBox Grid.Column="1" x:Name="StartNumTextBox"
                             Style="{StaticResource OasFieldTextBox}"
                             Text="1"
                             TextChanged="OnFieldChanged"/>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="IncrementLabel" Text="Incrément :"
                               Style="{StaticResource OasFieldLabel}"/>
                    <TextBox Grid.Column="1" x:Name="IncrementTextBox"
                             Style="{StaticResource OasFieldTextBox}"
                             Text="1"
                             TextChanged="OnFieldChanged"/>
                </Grid>
            </Grid>
        </StackPanel>

        <!-- Scope : Sélection ou Tout -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock x:Name="ScopeLabel" Text="Appliquer à :"
                       Style="{StaticResource OasFieldLabel}" Margin="0,0,0,6"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="ScopeSelected" Content="Sélection uniquement"
                             IsChecked="True" Margin="0,0,20,0"
                             Checked="OnFieldChanged"/>
                <RadioButton x:Name="ScopeAll" Content="Toutes les présentations"
                             Checked="OnFieldChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Header prévisualisation -->
        <TextBlock Grid.Row="4" x:Name="PreviewHeader" Text="Prévisualisation"
                   Style="{StaticResource OasGroupHeader}" Margin="0,0,0,6"/>

        <!-- Liste de prévisualisation -->
        <Border Grid.Row="5" Background="White" CornerRadius="4" Margin="0,0,0,8">
            <ListView x:Name="PreviewListView" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="ColBefore" Header="Avant" Width="200"
                                        DisplayMemberBinding="{Binding Before}"/>
                        <GridViewColumn x:Name="ColAfter" Header="Après" Width="200"
                                        DisplayMemberBinding="{Binding After}"/>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Border>

        <!-- Boutons -->
        <Grid Grid.Row="6" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" x:Name="CancelButton"
                    Content="Annuler"
                    Style="{StaticResource OasSecondaryButton}"
                    Padding="16,8" Margin="0,0,8,0"
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2" x:Name="ApplyButton"
                    Content="Appliquer"
                    Style="{StaticResource OasPrimaryButton}"
                    Padding="16,8"
                    IsEnabled="False"
                    Click="ApplyButton_Click"/>
        </Grid>
    </Grid>
</Window>
