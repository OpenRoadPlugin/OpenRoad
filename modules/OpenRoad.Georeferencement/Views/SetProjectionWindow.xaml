<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="OpenRoad.Modules.Georeferencement.Views.SetProjectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Definir le systeme de coordonnees"
        Height="600" Width="900"
        MinHeight="450" MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Style pour les labels d'info -->
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,4,8,4"/>
        </Style>
        
        <!-- Style pour les valeurs d'info -->
        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <!-- Style pour les groupes -->
        <Style x:Key="GroupHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
        </Style>
        
        <!-- Style bouton principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style bouton secondaire -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style bouton danger -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tete avec infos actuelles -->
        <Border Grid.Row="0" Background="White" CornerRadius="4" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Systeme actuel -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Systeme actuel :" Style="{StaticResource InfoLabel}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentSystemText" Text="(Aucun)" Style="{StaticResource InfoValue}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Systeme detecte -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Detecte :" Style="{StaticResource InfoLabel}" VerticalAlignment="Center"/>
                    <TextBlock x:Name="DetectedSystemText" Text="(Aucun)" Style="{StaticResource InfoValue}" VerticalAlignment="Center" Foreground="#2E7D32"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Barre de recherche -->
        <Border Grid.Row="1" Background="White" CornerRadius="4" Padding="8" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="SearchBox" 
                         Grid.Column="0"
                         Padding="8,6"
                         FontSize="14"
                         BorderThickness="1"
                         BorderBrush="#CCC"
                         ToolTip="Rechercher par nom, code, pays ou rÃ©gion"
                         TextChanged="SearchBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="  Rechercher..." Foreground="#999" FontSize="14" Margin="4,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <CheckBox x:Name="GroupByCountryCheckBox" 
                          Grid.Column="1" 
                          Content="Grouper par pays" 
                          VerticalAlignment="Center" 
                          Margin="12,0,0,0"
                          Checked="GroupByCountry_Changed"
                          Unchecked="GroupByCountry_Changed"/>
            </Grid>
        </Border>
        
        <!-- Liste et details -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Liste des projections -->
            <Border Grid.Column="0" Background="White" CornerRadius="4" Margin="0,0,8,0">
                <ListView x:Name="ProjectionListView" 
                          BorderThickness="0"
                          SelectionChanged="ProjectionListView_SelectionChanged"
                          MouseDoubleClick="ProjectionListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Systeme" Width="250" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Code" Width="150" DisplayMemberBinding="{Binding Code}"/>
                            <GridViewColumn Header="Pays" Width="100" DisplayMemberBinding="{Binding Country}"/>
                        </GridView>
                    </ListView.View>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Border>
            
            <!-- Panneau de details -->
            <Border Grid.Column="1" Background="White" CornerRadius="4" Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="DetailsPanel" Visibility="Collapsed">
                        <TextBlock Text="Details" Style="{StaticResource GroupHeader}"/>
                        
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Nom -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nom :" Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DetailName" Style="{StaticResource InfoValue}"/>
                            
                            <!-- Code AutoCAD -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Code :" Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="DetailCode" Style="{StaticResource InfoValue}" FontFamily="Consolas" FontWeight="Bold" Foreground="#1976D2"/>
                            
                            <!-- EPSG -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="EPSG :" Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="DetailEpsg" Style="{StaticResource InfoValue}"/>
                            
                            <!-- Pays -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Pays :" Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DetailCountry" Style="{StaticResource InfoValue}"/>
                            
                            <!-- Region -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Region :" Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DetailRegion" Style="{StaticResource InfoValue}"/>
                            
                            <!-- Unite -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Unite :" Style="{StaticResource InfoLabel}"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" x:Name="DetailUnit" Style="{StaticResource InfoValue}"/>
                            
                            <!-- Description -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Description :" Style="{StaticResource InfoLabel}" VerticalAlignment="Top"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" x:Name="DetailDescription" Style="{StaticResource InfoValue}"/>
                        </Grid>
                        
                        <!-- Limites -->
                        <TextBlock Text="Limites typiques" Style="{StaticResource GroupHeader}" Margin="0,16,0,0"/>
                        <Border Background="#F5F5F5" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                            <StackPanel>
                                <TextBlock x:Name="DetailBoundsX" Style="{StaticResource InfoValue}" FontFamily="Consolas"/>
                                <TextBlock x:Name="DetailBoundsY" Style="{StaticResource InfoValue}" FontFamily="Consolas"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Compteur de resultats -->
        <TextBlock Grid.Row="3" x:Name="ResultCountText" Text="0 systemes" Margin="4,8,0,8" Foreground="#666"/>
        
        <!-- Boutons d'action -->
        <Border Grid.Row="4" Background="White" CornerRadius="4" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Bouton Supprimer -->
                <Button Grid.Column="0" 
                        x:Name="ClearButton"
                        Content="Supprimer le systeme"
                        Style="{StaticResource DangerButton}"
                        ToolTip="Supprimer le systeme de coordonnees actuel du dessin"
                        Click="ClearButton_Click"/>
                
                <!-- Option Activer Bing Maps -->
                <CheckBox Grid.Column="1" 
                          x:Name="EnableGeoMapCheckBox"
                          Content="Activer Bing Maps (GEOMAP)"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          ToolTip="Active l'affichage de la carte aerienne Bing Maps apres application de la projection"
                          IsChecked="False"/>
                
                <!-- Bouton Annuler -->
                <Button Grid.Column="3" 
                        x:Name="CancelButton"
                        Content="Annuler" 
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,8,0"
                        Click="CancelButton_Click"/>
                
                <!-- Bouton Appliquer -->
                <Button Grid.Column="4" 
                        x:Name="ApplyButton"
                        Content="Appliquer" 
                        Style="{StaticResource PrimaryButton}"
                        IsEnabled="False"
                        Click="ApplyButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
